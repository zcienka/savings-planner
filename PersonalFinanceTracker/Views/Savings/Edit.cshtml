@model PersonalFinanceTracker.ViewModels.SavingsEditViewModel

@{
    ViewData["Title"] = "Edit";
    var status = Model.Status;
}


<div class="d-flex flex-column align-items-start">
    <h1>Edit</h1>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Savings.Id" />
        <input type="hidden" asp-for="Savings.UserId" />
        <input type="hidden" asp-for="Savings.Date" />

        <div class="form-group mb-2">
            <label asp-for="Savings.Title" class="control-label"></label>
            <input asp-for="Savings.Title" class="form-control" />
            <span asp-validation-for="Savings.Title" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Savings.TargetAmount" class="control-label"></label>
            <input asp-for="Savings.TargetAmount" class="form-control"/>
            <span asp-validation-for="Savings.TargetAmount" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Savings.CurrentAmount" class="control-label"></label>
            <input asp-for="Savings.CurrentAmount" class="form-control" />
            <span asp-validation-for="Savings.CurrentAmount" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Savings.Deadline" class="control-label"></label>
            <input asp-for="Savings.Deadline" type="date" class="form-control" />
            <span asp-validation-for="Savings.Deadline" class="text-danger"></span>
        </div>
        <div class="dropdown mb-2">
            <label asp-for="Savings.Status" class="control-label">Category</label>
            <select asp-for="Savings.Status" asp-items="@(new SelectList(status, "Name", "Name"))" class="dropdown-item rounded-2 px-3 py-2 valid">
            </select>
            <span asp-validation-for="Savings.Status" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <input type="submit" value="Save" class="btn"/>
        </div>
    </form>
    
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}